    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "prettier": "^3.0.0-alpha.7-for-vscode",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.7",
