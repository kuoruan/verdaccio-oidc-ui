    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "start": "verdaccio -c verdaccio.yaml",
    "lint": "eslint --fix --ext .js,.ts .",
    "link:oidc": "yarn link && yarn link verdaccio-oidc-ui",
